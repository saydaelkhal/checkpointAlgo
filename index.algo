ALGORITHM sentance
VAR
    str : STRING
    NB_W , NB_C , NB_V : INTEGER :=0
    i : INTEGER
BEGIN
    write("write a sentence:")
    read(str)
    WHILE (str i<> ".") DO
       NB_C :=NB_C +1
     IF (str(i)=("a" , "e" , "i" , "y" , "u" , "o")) THEN
       NB_V := NB_V+1
     END_IF
     IF (str(i)=" ") THEN
      NB_W := NB_W +1
     END_IF
    END_WHILE
  
    Write("Number of words:",NB_W)
    Write("Number of consonants:" ,NB_C)
    Write("Number of vowels:",NB_V)
END